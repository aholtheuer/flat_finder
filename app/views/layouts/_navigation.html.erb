
<header class='clearfix'>
  <% if current_user %>
    
      
      <div class="dropdown">
        <button class="dropbtn">[<%= current_user.username %>]</button>
        <div class="dropdown-content">
          <%= link_to 'Edit User', edit_user_path(current_user) %>
          <%= link_to 'Delete User', user_path(current_user), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>

      <%= link_to "Searches", current_user %>

      <%= link_to "Log Out", logout_path, method: :delete%>


  <% else %>

     <%= link_to "Sign Up", signup_path %> or
        <%= link_to "Log In", login_path %>


  <% end %>
</header>


<% if false %>
<header>
  <div class='container'>
    <nav>
      <ul>
      <% if current_user %>
        <li>[<%= current_user.username %>]</li>
        <li><%= link_to "Log Out", logout_path, method: :delete%></li>
      <% else %>
        <li><%= link_to "Sign Up", signup_path %> or
        <%= link_to "Log In", login_path %></li>
      <% end %>
      </ul>
    
    </nav>
  
  </div>

</header>
<% if current_user %>
  [<%= current_user.username %>]
